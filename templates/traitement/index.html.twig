{% extends 'base.html.twig' %}

{% block title %}Hello!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello! ✅</h1>

    nb de traitement : {{ traitements|length }}
    {% for traitement in traitements %}
		<ul>
			<li>{{traitement.nomPatient}},
				arriver le {{traitement.dateDebut|date('d-m-Y')}}
				et est resté pendant {{traitement.duree}} jour(s)
				<a href="{{path('modifierTraitement',{id:traitement.id})}}">modifier</a>
            	<a href="{{path('supprimerTraitement',{id:traitement.id})}}">supprimer</a></li>
			</li>
		</ul>
	{% else %}
		Pas d'adherent trouvé
	{% endfor %}
</div>
{% endblock %}
